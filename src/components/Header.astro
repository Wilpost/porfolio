---
import { MdOutlineDarkMode } from "react-icons/md";
import { IoSunnyOutline } from "react-icons/io5";
---

<nav
  id="header"
  class="
      mb-8
			sticky
			lg:left-[37%]
			lg:right-2/3
			w-[401px]
			px-3
			lg:animation-light
			p-2
		  z-[99999]
			rounded-3xl
			dark:text-white
			text-black
			top-2
			font-semibold
			flex
			items-center
			justify-between"
>
  <ul class="
        flex
        list_nav
				gap-3
				items-center
				justify-center
				text-sm pl-1">
    <a class="flex flex-col items-center" href="#sobre-mi">
      Sobre mí
      <div class="layer absolute bottom-3 p-[1px] px-1 rounded-full lg:block hidden bg-primary"></div>
    </a>
    <a href="#tecnologies">Tecnologías</a>
    <a href="#proyects">Proyectos</a>
    <a href="#contact">Contacto</a>
  </ul>

  <ul>
    <button
      id="toggle_theme"
      class="dark:hidden block p-2 hover:scale-110 text-white bg-zinc-800 active:scale-100 transition rounded-full"
    >
      <MdOutlineDarkMode size={20} />
    </button>

    <button
      id="toggle_theme-2"
      class="pop dark:block hidden p-2 hover:scale-110 text-black bg-white active:scale-100 transition rounded-full"
    >
      <IoSunnyOutline size={20} />
    </button>
  </ul>
</nav>

<style>
  .layer {
    animation-name: translateLayer;
		animation-fill-mode: both;

		animation-timeline: scroll(root);
		animation-range: 0px 1400px;
  }

  @keyframes translateLayer {
    0% {
      transform: translateX(0px);
      width: 30px;
    }

    20% {
      transform: translateX(0px);
      width: 30px;
    }

    30% {
      transform: translateX(77px);
      width: 30px;
    }

    40% {
      transform: translateX(77px);
      width: 30px;
    }

    41% {
      transform: translateX(82px);
      width: 30px;
    }

    48% {
      transform: translateX(167px);
      width: 30px;
    }

    59% {
      transform: translateX(167px);
      width: 30px;
    }

    90% {
      transform: translateX(167px);
      width: 30px;
    }

    100% {
      transform: translateX(243px);
      width: 30px;
    }
  }
</style>
