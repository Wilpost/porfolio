---
import Typography from "../Typography.astro";
import { type Tecnologie } from '../../const/tecnologies'
import ButtonTecnologyContrast from "../Buttons/ButtonTecnologyContrast.astro";
import { BiLayer } from "react-icons/bi";
import { Image } from "astro:assets";

type Props = {
    title: string;
    image: ImageMetadata;
    description: string;
    urlProyect: string;
    urlGithub: string;
    appLogo: ImageMetadata;
    tecnology_uses: Tecnologie[];
    type?: string
}

const { image, description, tecnology_uses, appLogo, urlGithub, type = 'Web app' } = Astro.props
---

<article
    class="
        card_container
        w-full
        flex
        p-2
        gap-3
        group
        relative
        overflow-hidden
        transition
        md:h-64
        h-[250px]
        rounded-lg
    "
>   

    <!-- <div class="absolute left-[15px] w-3 h-3 bg-primary ring-4 ring-contrastGhostColor rounded-full" /> -->

    <div
        class="
            w-full
            flex
            flex-col
            gap-1
        "
    >
    <Typography
                as="span"
                variant='medium'
                class:list="flex items-center gap-1 leading-1 dark:text-zinc-500 text-sm pointer-events-none select-none font-semibold mb-1 text-zinc-600"
            >
               <BiLayer size={20} /> {type}
        </Typography>

         <ul
            role="list"
            class="w-full mb-4 lg:max-w-[300px] flex flex-wrap gap-2">
            {
                tecnology_uses.map(item => {
                    return (
                        <li>
                            <ButtonTecnologyContrast
                                icon={item.icon}
                                alt={item.alt}
                                color={item.color}
                            >
                                {item.name}
                            </ButtonTecnologyContrast>
                        </li>
                    )
                })
            }
        </ul>

        <div class="block rounded-md md:hidden xs:left-64 md:left-80 left-44 bg-zinc-400 dark:bg-zinc-800 w-96 h-96 rounded-xs absolute top-24 z-20" />

        <Typography
            as="p"
            variant='small'
            class:list='hidden md:block text-balance text-sm mt-2  md:bg-zinc-300 dark:bg-zinc-800 p-3 h-44 rounded-md text-center w-[300px] dark:text-zinc-300 text-zinc-900 font-medium'
        >
            {description}
        </Typography>
    </div>

    <div class="relative w-full">
        <figure
        class="absolute z-50 xs:scale-[1.3] w-full -left-2 xs:left-2/4 lg:-left-[80px] top-24 xs:top-10 transition xs:w-[413px] h-full overflow-hidden rounded-md scale-[1.6]"
        >
        <Image class="object-cover proyect_image rounded-md" src={image} alt="Imagen de preview acerca del proyecto">
        </figure>
    </div>
</article>

<style>
    .backdrop_image {
        width: 300px;
        overflow: hidden;
    }

    .backdrop_image:hover > .proyect_image {
        transform: scale(1.2);
    }

    .proyect_image {
        object-fit: cover;
        transition: all .1s;
    }

    .links {
        color: var(--second-text-color);;
    }

    .links:hover {
        color: white;
    }
</style>