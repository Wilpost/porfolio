---
    interface Props {
        url?: string;
        fileName?: string;
    }

    const { url, fileName = null } = Astro.props
---

<a
    download={fileName}
    href={url}
    target="_blank"
    tabindex="0"
    aria-label="Boton para acceder a mi perfil de linkedin"
    class="redirect_button hover:opacity-45 transition cursor-pointer bg-[#e9e9e9] dark:text-secondTextColor dark:bg-ghostPrimary"
>
<slot/>
</a>

<style>
    .redirect_button[data-astro-cid-l3cin6ng] {
        border: 1px solid #b9b8bd;
        display: flex;
        padding: 4px;
        border-radius: 5px;
        font-weight: 500;
    }
</style>