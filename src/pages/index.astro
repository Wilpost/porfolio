---
import AboutSection from '../components/sections/AboutSection.astro';
import MyInfoSection from '../components/sections/MyInfoSection.astro';
import ProjectSection from '../components/sections/ProjectSection.astro';
import TecnologiesSection from '../components/sections/TecnologiesSection.astro';

import Layout from '../layouts/Layout.astro';
import { FaLinkedin } from 'react-icons/fa';
---

<Layout
	title="Portafolio de Wilyer | Programador y Desarrollador Web"
	description='Contrata a wilyer para crear aplicaciones web fullstack. Desarrollador web FullStack en Javascript'
>
	<main
		class="w-full items-center flex flex-col gap-3"
	>

	<section
		class="
			w-full
			justify-center
			items-center
			flex 
			flex-col
			p-4
			px-4
		"
	>
		<MyInfoSection />

		<AboutSection />
    <span class="w-full lg:w-[54%] mt-5 p-[0.5px] bg-zinc-300 dark:bg-zinc-700"/>
	</section>

		<TecnologiesSection />
		<ProjectSection />

		<section
			id="contact"
			class="
				w-full
				flex
				flex-col
				items-center
			"
		>
			<!-- <Typography as="h2" variant="head" color='toggle' >
				Enviame un mensaje...
			</Typography> -->

			<span class="text-sm text-zinc-800 dark:text-secondTextColor mt-6">Enviame un correo...</span>
			<form class="flex items-center gap-2 mt-2">
				<button
					disabled
					class="
						w-72
						bg-zinc-200
						font-semibold
						text-md
						dark:bg-zinc-900
						py-[6px]
						pl-3
						outline-none
						px-2
						border-[1px]
						border-primary
						focus:outline-primary
						text-zinc-700
						dark:text-primary
						dark:text-opacity-65
						rounded-2xl
					"
				>wilyer.developer@gmail.com</button>

				<!-- <button
					class="
						bg-primary
						hover:bg-primaryDark
						active:scale-90
						transition
						p-2
						rounded-full
						flex
						items-center
						gap-1
						text-white
					"
				>
					<span class="sr-only">wilyer.developer@gmail.com</span>
					<BiSend size={22} />
				</button> -->
			</form>
		</section>
	</main>

	<footer class="w-full min-h-20 p-10 flex items-end justify-center">
		<div
			class="lg:w-3/4 flex lg:px-10 items-center justify-around"
		>
			<div class="leading-10">
				<p class="lg:text-center pointer-events-none select-none text-sm text-zinc-800 dark:text-zinc-400">&copy; 2024 Wilyer Queipo. Casi todos los derechos reservados</p>
				<p class="lg:text-start text-center pointer-events-none select-none text-sm text-zinc-800 dark:text-zinc-400">
					Echo con
					<span class="dark:after:content-['🤍'] after:content-['❤']"/>
					y Astro
				</p>
			</div>

			<div class="dark:bg-zinc-900 dark:hover:bg-zinc-800 transition bg-zinc-200 hover:bg-zinc-300 rounded-full p-2 lg:flex hidden gap-2 -mt-2 text-md font-semibold dark:text-white text-zinc-900">
				<a target="_blank" href="https://www.linkedin.com/in/wilyer-queipo-riera-0a69752b8"><FaLinkedin size={20}/></a>
			</div>
		</div>
	</footer>
</Layout>
